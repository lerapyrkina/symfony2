{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container d-flex flex-column align-items-center mt-5">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger w-50 text-center" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="mb-4">Register</h1>

        <div class="w-50">
            {{ form_start(registrationForm, {'attr': {'class': 'text-center'}}) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control text-center'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                attr: {'class': 'form-control text-center'}
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-primary w-100">Register</button>
            {{ form_end(registrationForm) }}

            <a href="{{ path('app_login') }}" class="btn btn-secondary w-100 mt-3">Go to Login</a>
        </div>
    </div>
{% endblock %}