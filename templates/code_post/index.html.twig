{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Stack over bug</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_my_posts') }}">My Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('_logout_main') }}">Logout</a>
                    </li>
                    <li class="nav-item">
                        <p class="nav-link">{{ app.user.email }}</p>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="mb-4">All Code Posts</h1>

        <div class="list-group">
            {% for post in posts %}
                <div class="list-group-item mb-4">
                    <h2>{{ post.title }}</h2>
                    <p><strong>Description:</strong> {{ post.description }}</p>
                    <p><strong>Author:</strong> {{ post.author.email }}</p>
                    <p><strong>Created at:</strong> {{ post.createdAt|date('Y-m-d H:i') }}</p> <!-- Отображение даты -->

                    <div class="post-content">
                        <pre>{{ post.content }}</pre>
                    </div>
                </div>
            {% else %}
                <p>No Posts!</p>
            {% endfor %}
        </div>
    </div>
    <style>
        .navbar-brand {
            padding-bottom: 25px;
        }

        .navbar {
            z-index: 1050;
        }
        .container {
            padding-top: 56px;
        }

    </style>
{% endblock %}
